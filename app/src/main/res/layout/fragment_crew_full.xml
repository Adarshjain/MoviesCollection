<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.geeky.adarsh.moviescollection.Fragments.SimilarMoviesFullFragment">

    <include
        android:id="@+id/appBarPadding"
        layout="@layout/app_bar_padding" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/crew_full_recycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/appBarPadding"
        android:clipToPadding="false"
        android:paddingBottom="8dp" />

</RelativeLayout>
